function formataData($data){
    if($data != NULL){
        $aux_data = explode("-", $data);
        $nova_data = $aux_data[2]."/".$aux_data[1]."/".$aux_data[0];
        return $nova_data;
    }else{
        return 'NULL';
    }
}
